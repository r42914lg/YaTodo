<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YaTodo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:colorBackground">@color/dark_back_primary</item>
        <item name="colorPrimary">@color/dark_back_primary</item>
        <item name="colorPrimaryVariant">@color/dark_back_primary</item>
        <item name="colorOnPrimary">@color/dark_color_blue</item>
        <item name="colorSecondary">@color/dark_color_blue</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- My color attributes -->
        <item name="markCompleteColor">@color/dark_color_green</item>
        <item name="swipeDeleteColor">@color/dark_color_red</item>
        <item name="colorControlNormal">@color/dark_label_tertiary</item>
        <item name="recyclerAndEditTextAreaColor">@color/dark_back_secondary</item>
        <item name="disableColor">@color/dark_label_disable</item>
        <item name="themeBackground">@color/dark_back_primary</item>
    </style>

    <style name="Theme.YaTodo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YaTodo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <style name="Theme.YaTodo.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

</resources>